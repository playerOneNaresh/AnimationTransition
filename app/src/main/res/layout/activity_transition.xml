<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TransitionActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:text="Naresh and Archana"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="200dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:padding="10dp"
    android:src="@drawable/naresh_new"
    android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/archana"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="Welcome To You all Our Small World Of happiness"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back Exit"
        android:id="@+id/back_exit_explode"
        android:layout_margin="10dp"

        />

</LinearLayout>